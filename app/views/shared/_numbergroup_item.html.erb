<tr>
  <td class="numbergroup">
    <span class="user">
      <%= link_to numbergroup_item.user.name, numbergroup_item.user %>
    </span>
    <span class="content"><%= numbergroup_item.name %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(numbergroup_item.created_at) %> ago.
    </span>
  </td>
  <% if current_user?(numbergroup_item.user) %>
    <td>
      <%= link_to "delete", numbergroup_item, :method => :delete,
                                       :confirm => "You sure?",
                                       :title => numbergroup_item.user %>
    </td>
  <% end %>
<% if current_user?(numbergroup_item.user) %>
    <td>
      <%= link_to "edit", edit_numbergroup_path(numbergroup_item,current_user) %>
    </td>
  <% end %>

</tr>